# ============================================
# Recreation.gov Booking Bot - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# For Render.com deployment, set these in the dashboard

# ============================================
# Server Configuration
# ============================================
PORT=5000
FLASK_HOST=0.0.0.0
FLASK_ENV=production

# ============================================
# WebSocket Configuration
# ============================================
WEBSOCKET_PORT=8765
WEBSOCKET_HOST=0.0.0.0
MAX_MESSAGE_SIZE=1048576
PING_INTERVAL=20
PING_TIMEOUT=20

# ============================================
# Timezone Configuration
# ============================================
# Set your timezone (e.g., America/New_York, Europe/London, Asia/Kolkata)
# See: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TIMEZONE=Asia/Kolkata

# ============================================
# Security & Encryption
# ============================================
# REQUIRED: Generate a key using this command:
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
#
# Example output: xK8vN2mP9qR5sT7uV1wX3yZ4aB6cD8eF0gH2iJ4kL6m=
# Copy the generated key and paste it below (without quotes)
ENCRYPTION_KEY=your-encryption-key-here

# ============================================
# Data Storage
# ============================================
# Directory for storing configuration and booking data
# For Render.com, use: /opt/render/project/data
# For local development, use: ./data or leave empty for current directory
DATA_DIR=./data

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO

# ============================================
# Application Settings
# ============================================
MAX_QUANTITY_PER_TAB=50

